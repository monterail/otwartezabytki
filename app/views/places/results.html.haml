- if @places.blank?
  = t('views.places.results.no_results')
- else
  %section.creator-step
    %h3= t('views.places.results.header')
    .places-wrapper
      %ul.places
        - @places.each do |place|
          %li
            = (place.location_names.first(place.location_names.size - 1) << "<strong>#{place.name}</strong>").join(' > ').html_safe
            = link_to t('views.places.results.choose_html'), 'javascript: void(0);', 'data-location-names' => place.location_names.join(';'), 'data-location' => place.location_string
