.login_title_register= t('users.registrations.new.header') 
.right_txt_box= render 'devise/shared/login_info'
.form_box
  .login_intro_txt= t('users.registrations.new.signup_intro')
  .fb-login
    = link_to t('layouts.application.facebook_sign_up'), user_omniauth_authorize_path(:facebook), :class => "fb-btn"

  = semantic_form_for(user, :url => user_registration_path, :remote => request.xhr?) do |f|
    = f.semantic_errors
    = f.hidden_field :registration, :value => true
    = f.input :username, :required => false
    = f.input :email, :required => false, :autofocus => true
    = f.submit "Zarejestruj siÄ™"
