.content_wrapper
  .container
    %h3 Jak wygląda nasza baza zabytków?
    .status_bar
      - cache("home_relics_statistics", :expires_in => 5.minutes) do
        - stats = relics_statistics

        - p3 = [5, stats[3] * 100 / stats[0]].max
        - p2 = [10, stats[2] * 100 / stats[0]].max
        - p1 = [15, stats[1] * 100 / stats[0]].max

        %div{:style => "width: 100%"}= stats[0]
        %div{:style => "width: #{p1}%"}= stats[1]
        %div{:style => "width: #{p2}%"}= stats[2]
        %div{:style => "width: #{p3}%"}= stats[3]

