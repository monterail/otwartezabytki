.login_title_forgot
  %h2= t('.header', :scope => 'views')
.form_box_forgot
  .ask_account= t('.ask_account', :scope => 'views')
  .txt_forgot= t('.password_has_been_sent')
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    - unless resource.errors.empty?
      .alert.alert-error
        = t('.wrong_email', :scope => 'views')
    .form-inputs
      = f.input :email, :error => false
    .form-actions
      = f.button :submit, t('.submit', :scope => 'views')
