.login_title
  %h2= t('.header', :scope => 'views')
.right_txt_box
  .ask_account
    = t('.ask_account1', :scope => 'views')
    %br/
  = t('.ask_account2', :scope => 'views')
  %br/
  = link_to t('.register_here', :scope => 'views'), new_user_registration_path
  %br/
  .ask_account= t('.ask_account3', :scope => 'views')
  = t('.anonymous_account', :scope => 'views')
.form_box
  .login_intro_txt= t('.login_intro', :scope => 'views')
  - if flash[:notice]
    .alert.alert-info= flash[:notice]
  - if flash[:error]
    .alert.alert-error= flash[:error]
  = semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    = f.semantic_errors
    = f.input :email, :required => false, :autofocus => true
    = f.input :password, :required => false
    - if devise_mapping.recoverable? && controller_name != 'passwords'
      .link_form
        = link_to t('.forgot_password', :scope => 'views'), new_password_path(resource_name)
        %br/
    = f.submit t('.submit', :scope => 'views')
