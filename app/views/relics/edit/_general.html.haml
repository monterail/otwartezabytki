.row
  = semantic_form_for relic, :url => section_relic_path(relic.id, :section => :general), :remote => true do |f|
    = f.input :identification, :as => :string, alt: t('oz_input_alts.edit_relic.relic_name')
    = f.input :common_name, :as => :string, alt: t('oz_input_alts.edit_relic.relic_common_name')
    .actions
      %button= t('views.relics.edit.save')
      = t('views.relics.edit.or')
      = link_to t('views.relics.edit.cancel'), relic_path(relic.id), :class => "cancel js-close-edit-relic"