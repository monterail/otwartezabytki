%section.show.description
  %h2= t('views.relics.show.description.header')
  - if relic.description.present?
    = link_to t('views.relics.show.general.fill_in'), edit_section_relic_path(relic.id, :description), :remote => true, :class => "edit-relic-link"
    .content= sanitize relic.description
  - else
    .placeholder
      = t('views.relics.show.description.placeholder')
      = link_to t('views.relics.show.description.add'), edit_section_relic_path(relic.id, :description), :remote => true
      .example
        %a.show-example{:href => image_path('screenshot-description.jpg'), :class => "fancybox"}
          = t('views.relics.show.general.show_example')