%section.show.documents
  %h2= t('views.relics.show.documents.header')
  - if relic.documents_info.present?
    .where-to-find
      %h3= t('views.relics.show.documents.where_to_find')
      %p= relic.documents_info
  - if relic.all_documents.count > 0
    = link_to t('views.relics.show.documents.upload'), edit_section_relic_path(relic.to_param, :documents), :remote => true, :class => "edit-relic-link"
    .content
      - relic.all_documents.each do |document|
        .document{ :class => document.mime_class }
          %h3= link_to document.name, document.file.url
          %p
            = t('views.relics.show.documents.added')
            = l document.created_at.to_date, :format => :short
          %p
            = t('views.relics.show.documents.size')
            = (document.size / 1024.0 / 1024.0).round(1)
            MB
      = link_to t('views.relics.show.documents.upload'), download_zip_relic_path(relic)
  - else
    .placeholder
      = t('views.relics.show.documents.placeholder')
      = link_to t('views.relics.show.documents.add_file'), edit_section_relic_path(relic.to_param, :documents), :remote => true
