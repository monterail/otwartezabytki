- if relic.has_photos?
  %section.show.photos
    .content
      .actions
        = link_to t('views.relics.show.photos.show', :amount => relic.all_photos.count), relic_photo_path(relic.to_param, relic.all_photos.first.id), :class => "show-photos", :remote => true
        = link_to t('views.relics.show.photos.add'), edit_section_relic_path(relic, :section => :photos), :class => "edit-photos", :remote => true, data: { toggle: "modal", target: "#edit-relic-modal" }
      = link_to content_tag(:div, image_tag(relic.main_photo.file.maxi.url, :width => 300, :height => 300, :alt => relic.main_photo.alternate_text) + content_tag(:span, relic.main_photo.author), :class => "oz-photo-container"), relic_photo_path(relic, relic.main_photo.id), :class => "main-photo", :remote => true
      - if relic.all_photos.count > 0
        %ul#slider_mini.jcarousel-skin-mini{ :"data-photos" => relic.all_photos.all.to_json }
- else
  %section.show.photos.placeholder
    .content
      .ico
      = link_to t('views.relics.show.photos.add'), edit_section_relic_path(relic.to_param, :section => :photos), :class => "edit-photos", :remote => true
