%section.show.entries
  %h2= t('views.relics.show.entries.header')
  - if relic.entries.count > 0
    = link_to t('views.relics.show.general.fill_in'), edit_section_relic_path(relic.id, :entries), :remote => true, :class => "edit-relic-link"
    .content
      - relic.entries.each do |entry|
        .entry-container
          %article.entry
            %h3= entry.title
            .body= sanitize entry.body
  - else
    .placeholder
      = t('views.relics.show.entries.placeholder')
      = link_to t('views.relics.show.entries.add'), edit_section_relic_path(relic.id, :entries), :remote => true
      .example
        %a.show-example{:href => image_path('screenshot-stories.jpg'), :class => "fancybox"}
          = t('views.relics.show.general.show_example')
