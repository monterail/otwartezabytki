= stylesheet_link_tag "http://#{Settings.oz.host}/assets/widgets/add_alert.css"
.widget-box{:src => "http://#{Settings.oz.host}/widgets/add_alert.html?relic_id=#{widget.relic_id}&raw=true&pp=disable"}
  %a.what-about{:href => "http://#{Settings.oz.host}#{page_path('o-projekcie')}", :target => "_blank"}
    = t('views.widgets.show.about')
  .widget-logo
  %h3= t('views.widgets.show.add_alert.header')
  %h2= widget.relic.identification
  .actions
    - if widget.relic.alerts.count.zero?
      %button.none
        = t('views.widgets.show.add_alert.empty')
    - else
      %button.show{:src => "http://#{Settings.oz.host}/relics/#{widget.relic.to_param}#anchor-alerts"}
        = t('views.widgets.show.add_alert.show')
        %span= widget.relic.alerts.count

    %button.create{:src => "http://iframe.#{Settings.oz.host}/relics/#{widget.relic_id}/alerts/new"}
      = t('views.widgets.show.add_alert.create')
