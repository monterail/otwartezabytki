- if widgets.length > 0
  %h1 Twoje widgety:
  .widgets
    - widgets.each do |widget|
      .widget
        %h2= widget.widget_template.name
        %input{ type: 'text', value: widget.snippet(request.host) }
        = link_to 'Edytuj widget', edit_widget_path(widget.id)
